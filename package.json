{
  "name": "react-email-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --concurrency 25",
    "release": "turbo run build --filter=./packages/* && pnpm changeset publish",
    "canary:enter": "changeset pre enter canary",
    "canary:exit": "changeset pre exit",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm lint:fix",
    "lint": "biome check",
    "lint:fix": "biome check --write .",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.5",
    "@changesets/cli": "2.29.4",
    "@types/node": "22.14.1",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "happy-dom": "17.4.4",
    "pkg-pr-new": "0.0.51",
    "tsconfig": "workspace:*",
    "tsup": "8.4.0",
    "turbo": "2.5.4",
    "vite": "6.3.4",
    "vitest": "3.2.3"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.1",
      "@types/react-dom": "^19.0.1"
    }
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
